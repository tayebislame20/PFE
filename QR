    <script>
        function checkPassword() {
            const pwd = document.getElementById('password').value;
            const correctPwd = "info2025"; // ton mot de passe

            if(pwd === correctPwd){
                window.location.href = "https://docs.google.com/forms/d/e/1FAIpQLSfqyisyIe0ToXceMa8FsEMbUUbdmwVbqxFOsji0fymQ99uQdA/viewform?usp=header";
            } else {
                document.getElementById('error').textContent = "Mot de passe incorrect. Essayez encore.";
            }
        }
    </script>
